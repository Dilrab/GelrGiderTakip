@model UserLoginDto

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <div class="card p-4 shadow-sm" style="width: 100%; max-width: 420px;">
    <div class="card-body">
      <h4 class="card-title mb-4 text-center">Giriş Yap</h4>

      <form asp-action="Login" method="post">
        <div class="mb-3">
          <label asp-for="UserEmail" class="form-label">E-posta</label>
          <div class="input-group">
            <span class="input-group-text">
              <i class="fas fa-envelope"></i>
            </span>
            <input asp-for="UserEmail" class="form-control" placeholder="email@ornek.com"/>
          </div>
        </div>

        <div class="mb-3">
          <label asp-for="Password" class="form-label">Şifre</label>
          <div class="input-group">
            <span class="input-group-text">
              <i class="fas fa-lock"></i>
            </span>
            <input asp-for="Password" type="password" class="form-control" placeholder="Şifreniz"/>
          </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
        </div>
                <button type="submit">Giriş Yap</button>
        

        <hr class="my-4" />

        <div class="text-center">
          <span>Hesabın yok mu?</span>
          <a asp-controller="Account" asp-action="Register" class="fw-bold">Kayıt Ol</a>
        </div>
      </form>
    </div>
  </div>
</div>
