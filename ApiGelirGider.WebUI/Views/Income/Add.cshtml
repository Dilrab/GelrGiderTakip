@model ApiGelirGider.DTOs.Income.IncomeCreateDto

@if (!string.IsNullOrEmpty(Model.ErrorMessage == null ? "" : Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.ResultMessage == null ? "" : Model.ResultMessage))
{
    <div class="alert alert-success" role="alert">
        @Model.ResultMessage
    </div>
}
                    <!-- Form -->
                    <form asp-action="Post" method="post">
                        <div class="mb-3">
                            <label asp-for="IncomeAmount" class="form-label">Tutar (₺)</label>
                            <input asp-for="IncomeAmount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="IncomeAmount" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IncomeSource" class="form-label">Gelir Kaynağı</label>
                            <input asp-for="IncomeSource" class="form-control" type="text" />
                            <span asp-validation-for="IncomeSource" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Kategori</label>
                            <input asp-for="CategoryId" class="form-select">
                           
                            </input>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">Kullanıcı ID</label>
                            <input asp-for="UserId" class="form-control" type="number" />
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IncomeDate" class="form-label">Gelir Tarihi</label>
                            <input asp-for="IncomeDate" class="form-control" type="date" />
                            <span asp-validation-for="IncomeDate" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="/Income" class="btn btn-outline-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

}

}

