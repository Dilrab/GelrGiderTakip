@model ApiGelirGider.DTOs.Income.IncomeCreateDto

<!-- 🔔 Mesajlar -->
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ResultMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @Model.ResultMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

<!-- 🧾 Gelir Ekleme Formu -->
<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i> Yeni Gelir Kaydı</h5>
    </div>
    <div class="card-body">
        <form asp-action="Post" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="IncomeAmount" class="form-label">Tutar (₺)</label>
                    <input asp-for="IncomeAmount" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="IncomeAmount" class="text-danger small"></span>
                </div>


                <div class="col-md-6">
                    <label asp-for="CategoryId" class="form-label">Kategori</label>
                    <select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select">
                        <option value="">-- Seçiniz --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="IncomeDate" class="form-label">Gelir Tarihi</label>
                    <input asp-for="IncomeDate" class="form-control" type="date" />
                    <span asp-validation-for="IncomeDate" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="/Income" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> İptal
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>


