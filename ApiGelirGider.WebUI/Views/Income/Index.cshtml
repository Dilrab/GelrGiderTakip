@model ApiGelirGider.DTOs.Income.IncomeCreateDto
@using System.Globalization

@{
    ViewData["Title"] = "Gelir Listesi";
    var incomes = Model.IncomeList ?? new List<ApiGelirGider.DTOs.Income.IncomeDto>();
}

<div class="container mt-5">
    <div class="header d-flex justify-content-between align-items-center">
        <h3 class="m-0">💰 Gelir Listesi</h3>
        <div>
            <a asp-controller="Income" asp-action="Add" class="btn btn-success">
                🟢 Yeni Gelir Ekle
            </a>
            <a asp-controller="Income" asp-action="Index" class="btn btn-outline-primary">
                ↻ Yenile
            </a>
        </div>
    </div>

    <!-- 🔔 Mesajlar -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ResultMessage))
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @Model.ResultMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <div class="card shadow-sm mt-3">
        <div class="card-body table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>📂 Kategori</th>
                        <th>🗓️ Tarih</th>
                        <th>💸 Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!incomes.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center">Kayıt bulunamadı.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in incomes)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.IncomeDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.IncomeAmount.ToString("C0", CultureInfo.GetCultureInfo("tr-TR"))</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
