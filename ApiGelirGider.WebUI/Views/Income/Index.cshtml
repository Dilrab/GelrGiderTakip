@model IEnumerable<ApiGelirGider.DTOs.Income.IncomeDto>

@using System.Globalization
@using System.Linq

@{
    ViewData["Title"] = "Gelir Listesi";
    var incomes = Model ?? Enumerable.Empty<ApiGelirGider.DTOs.Income.IncomeDto>();
}

<div class="container mt-5">
    <div class="header d-flex justify-content-between align-items-center">
        <h3 class="m-0">💰 Gelir Listesi</h3>
        <div>
            <a asp-controller="Income" asp-action="Add" class="btn btn-success">
                🟢 Yeni Gelir Ekle
            </a>
            <a asp-controller="Income" asp-action="Index" class="btn btn-outline-primary">
                ↻ Yenile
            </a>
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-body table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>🔖 Kategori ID</th>
                        <th>💸 Tutar</th>
                        <th>📄 Kaynak</th>
                        <th>👤 Kullanıcı</th>
                        <th>🗓️ Tarih</th>
                        <th style="width: 220px;">⚙️ İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!incomes.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center">Kayıt bulunamadı.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in incomes)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>
                                    @item.IncomeAmount.ToString(
                                    "C0",
                                                        CultureInfo.GetCultureInfo("tr-TR")
                                                        )
                        </td>
                        <td>@item.IncomeSource</td>
                        <td>@item.UserId</td>
                        <td>@item.IncomeDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <form asp-controller="Income" asp-action="Delete"
                                  asp-route-id="@item.IncomeId"
                                  method="post" class="d-inline">
                                <button type="submit"
                                        class="btn btn-sm btn-danger"
                                        onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                    🗑️ Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
