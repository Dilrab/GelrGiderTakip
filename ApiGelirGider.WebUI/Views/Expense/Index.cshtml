@model ApiGelirGider.DTOs.Expense.ExpenseCreateDto
@using System.Globalization

@{
    ViewData["Title"] = "Gider Listesi";
    var expenses = Model.ExpenseList ?? new List<ApiGelirGider.DTOs.Expense.ExpenseDto>();
}

<div class="container mt-5">
    <div class="header d-flex justify-content-between align-items-center">
        <h3 class="m-0">📁 Gider Listesi</h3>
        <div>
            <a asp-controller="Expense" asp-action="Add" class="btn btn-success">🟢 Yeni Gider Ekle</a>
            <a asp-controller="Expense" asp-action="Index" class="btn btn-outline-primary">↻ Yenile</a>
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-body table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>📂 Kategori</th>
                        <th>💸 Tutar</th>
                        <th>🗓️ Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!expenses.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center">Kayıt bulunamadı.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in expenses)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.ExpenseAmount.ToString("C2", CultureInfo.GetCultureInfo("tr-TR"))</td>
                                <td>@item.ExpenseDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
